      {id:"TEP-01", name:"Gebetsteppich ‚Äì Premium (Navy)", cat:"teppich", price:19.99, desc:"Weich, saubere Kanten, gute Dicke. Geschenk-tauglich.", tags:["teppich","navy"]},
      {id:"TEP-02", name:"Gebetsteppich ‚Äì Travel (leicht)", cat:"teppich", price:12.99, desc:"D√ºnner & leicht, perfekt f√ºr Rucksack / Auto.", tags:["travel","leicht"]},
      {id:"ITR-01", name:"Itr (Parfum√∂l) ‚Äì Oud Style 6ml", cat:"itr", price:9.99, desc:"Kr√§ftig-warm, langanhaltend. Unisex.", tags:["oud","6ml","√∂l"]},
      {id:"ITR-02", name:"Itr (Parfum√∂l) ‚Äì Musk 6ml", cat:"itr", price:8.99, desc:"Sauber, weich, alltagstauglich.", tags:["musk","6ml","√∂l"]},
      {id:"TSB-01", name:"Tasbih ‚Äì 33 Perlen (Holz)", cat:"tasbih", price:6.49, desc:"Leicht, angenehm in der Hand, stabiler Faden.", tags:["33","holz"]},
      {id:"TSB-02", name:"Tasbih ‚Äì 99 Perlen (Acryl)", cat:"tasbih", price:9.49, desc:"Klassisch, gute Haptik, sch√∂nes Finish.", tags:["99","acryl"]}
    ];

    const list = document.getElementById("list");
    const q = document.getElementById("q");
    const cat = document.getElementById("cat");

    function esc(s){ return String(s).replace(/[&<>"']/g, m => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m])); }

    function render(){
      const query = q.value.trim().toLowerCase();
      const c = cat.value;

      const filtered = products.filter(p => {
        const hitQ = !query || (p.name + " " + p.desc + " " + p.tags.join(" ")).toLowerCase().includes(query);
        const hitC = (c==="all") || (p.cat===c);
        return hitQ && hitC;
      });

      list.innerHTML = filtered.map(p => {
        const msg = `Salam, ich m√∂chte bestellen:%0A- Produkt: ${encodeURIComponent(p.name)}%0A- Artikel-Nr.: ${p.id}%0A- Menge: 1%0A- PLZ/Ort: ...%0A`;
        const wa = `https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`;
        return `
          <article class="card">
            <div class="img">Hier sp√§ter Produktfoto</div>
            <div style="display:flex;align-items:flex-start;justify-content:space-between;gap:10px">
              <h3>${esc(p.name)}</h3>
              <div class="price">${p.price.toFixed(2)} ‚Ç¨</div>
            </div>
            <div class="meta">
              <span class="chip">Artikel: ${esc(p.id)}</span>
              <span class="chip">Kategorie: ${esc(p.cat)}</span>
            </div>
            <p>${esc(p.desc)}</p>
            <div class="actions">
              <a class="btn mini primary" href="${wa}" target="_blank" rel="noopener">WhatsApp</a>
              <button class="btn mini" onclick="copyText('${esc(p.name)} (${esc(p.id)}) ‚Äì ${p.price.toFixed(2)} ‚Ç¨')">Kopieren</button>
            </div>
          </article>
        `;
      }).join("") || `<div class="panel" style="grid-column:1/-1">Keine Treffer.</div>`;
    }

    function copyText(t){
      navigator.clipboard.writeText(t).then(()=>alert("Kopiert: " + t)).catch(()=>prompt("Kopieren:", t));
    }

    // Update header contact button
    const whatsBtn = document.getElementById("whatsBtn");
    whatsBtn.href = `https://wa.me/${WHATSAPP_NUMBER}?text=Salam%20ich%20m%C3%B6chte%20bestellen:%20`;
    render();
    q.addEventListener("input", render);
    cat.addEventListener("change", render);
  </script>
