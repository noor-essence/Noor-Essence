  <script>
    // ====== EDIT HERE ======
    const WHATSAPP_NUMBER = "491234567890"; // ohne +, mit L√§ndercode (49...)
    const INSTAGRAM = "@dein_name";
    // =======================

    const products = [
      {id:"KUF-01", name:"Kufi (Baumwolle) ‚Äì Wei√ü", cat:"m√ºtze", price:5.99, desc:"Schlicht, leicht, gute Passform. Gr√∂√üen: S/M/L.", tags:["wei√ü","kufi","baumwolle"]},
